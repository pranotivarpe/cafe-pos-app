generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  PREPARING
  SERVED
  PAID
  CANCELLED
}

enum TableStatus {
  AVAILABLE
  OCCUPIED  
  RESERVED
}

enum IngredientUnit {
  GRAMS
  KG
  ML
  LITERS
  PIECES
  CUPS
  TABLESPOONS
  TEASPOONS
}

enum OrderType {
  DINE_IN
  TAKEAWAY
  DELIVERY
}

enum DeliveryPlatform {
  DIRECT
  ZOMATO
  SWIGGY
}

enum DeliveryStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY_FOR_PICKUP
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELLED
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   @default("owner")
  createdAt DateTime @default(now())
}

model Category {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  menuItems MenuItem[]
  createdAt DateTime   @default(now())
}

model MenuItem {
  id          Int         @id @default(autoincrement())
  name        String      
  description String?
  price       Decimal     @db.Decimal(10, 2)
  categoryId  Int
  isActive    Boolean     @default(true)
  category    Category    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  inventory   Inventory?
  ingredients MenuItemIngredient[]
  orderItems  OrderItem[]
  createdAt   DateTime    @default(now())
}

model Inventory {
  id         Int      @id @default(autoincrement())
  menuItemId Int      @unique
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  quantity   Int      @default(0)
  lowStock   Boolean  @default(false)
  updatedAt  DateTime @updatedAt
}

model Ingredient {
  id            Int                  @id @default(autoincrement())
  name          String               @unique
  unit          IngredientUnit       @default(GRAMS)
  currentStock  Float                @default(0)
  minStock      Float                @default(10)  // Alert threshold
  costPerUnit   Decimal              @db.Decimal(10, 2) @default(0)
  supplier      String?
  menuItems     MenuItemIngredient[]
  stockLogs     IngredientStockLog[]
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
}

model MenuItemIngredient {
  id           Int        @id @default(autoincrement())
  menuItemId   Int
  ingredientId Int
  quantity     Float      // Amount of ingredient needed for 1 unit of menu item
  menuItem     MenuItem   @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)
  
  @@unique([menuItemId, ingredientId])
}

model IngredientStockLog {
  id           Int        @id @default(autoincrement())
  ingredientId Int
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)
  changeType   String     // PURCHASE, ORDER_USAGE, WASTAGE, ADJUSTMENT
  quantity     Float      // Positive for additions, negative for deductions
  notes        String?
  orderId      Int?       // Link to order if usage
  createdAt    DateTime   @default(now())
}

model Order {
  id          Int         @id @default(autoincrement())
  tableId     Int?
  table       Table?       @relation(fields: [tableId], references: [id])
  billNumber  String      @unique
  subtotal    Decimal     @db.Decimal(10, 2)
  tax         Decimal     @db.Decimal(10, 2)
  total       Decimal     @db.Decimal(10, 2)
  status      OrderStatus      @default(PENDING) // pending, preparing, served, paid, cancelled
  paymentMode String?     // cash, card, upi
  items       OrderItem[]
  createdAt   DateTime    @default(now())
  paidAt      DateTime?
  updatedAt   DateTime    @updatedAt
  orderType       OrderType        @default(DINE_IN)
  deliveryInfo    DeliveryInfo?    
}

model OrderItem {
  id         Int      @id @default(autoincrement())
  orderId    Int
  order      Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItemId Int
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Restrict)
  quantity   Int
  price      Decimal  @db.Decimal(10, 2)
  notes         String?              
  modifications OrderItemModification[]
}

model Modification {
  id          Int                    @id @default(autoincrement())
  name        String                 @unique  // e.g., "Extra Cheese", "No Onion"
  price       Decimal                @db.Decimal(10, 2) @default(0)  // Extra charge (0 for free mods)
  isActive    Boolean                @default(true)
  category    String?                // e.g., "Add-ons", "Remove", "Spice Level"
  orderItems  OrderItemModification[]
  createdAt   DateTime               @default(now())
}

model OrderItemModification {
  id             Int          @id @default(autoincrement())
  orderItemId    Int
  orderItem      OrderItem    @relation(fields: [orderItemId], references: [id], onDelete: Cascade)
  modificationId Int
  modification   Modification @relation(fields: [modificationId], references: [id], onDelete: Cascade)
  quantity       Int          @default(1)  // For things like "Double cheese" = quantity 2
  price          Decimal      @db.Decimal(10, 2)  // Price at time of order
  
  @@unique([orderItemId, modificationId])
}

model Table {
  id            Int        @id @default(autoincrement())
  number        Int         @unique 
  name          String 
  capacity      Int         @default(4)
  status        TableStatus @default(AVAILABLE)
  currentBill   Float?     @default(0)
  orderTime     DateTime?               // changed from String? to DateTime?
  customerName  String?
  customerPhone String?
  reservedFrom  DateTime?               // NEW: reservation start
  reservedUntil DateTime?               // changed to DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime   @updatedAt
  orders        Order[]   @relation 
  @@map("tables")
}

model DeliveryInfo {
  id                Int              @id @default(autoincrement())
  orderId           Int              @unique
  order             Order            @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  // Customer info
  customerName      String
  customerPhone     String
  customerEmail     String?
  
  // Delivery specific
  deliveryAddress   String?          // Null for takeaway
  deliveryPlatform  DeliveryPlatform @default(DIRECT)
  platformOrderId   String?          // Zomato/Swiggy order ID
  deliveryStatus    DeliveryStatus   @default(PENDING)
  
  // Delivery partner info (for platform orders)
  deliveryPartnerName   String?
  deliveryPartnerPhone  String?
  
  // Timing
  estimatedTime     DateTime?        // Estimated delivery/pickup time
  actualTime        DateTime?        // Actual delivery/pickup time
  
  // Additional charges
  deliveryFee       Decimal          @db.Decimal(10, 2) @default(0)
  packagingFee      Decimal          @db.Decimal(10, 2) @default(0)
  platformFee       Decimal          @db.Decimal(10, 2) @default(0)  // Commission to Zomato/Swiggy
  discount          Decimal          @db.Decimal(10, 2) @default(0)
  
  // Notes
  specialInstructions String?
  
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
}

